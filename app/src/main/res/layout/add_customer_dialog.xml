<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer ID:"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20sp"
        android:layout_marginStart="69dp"
        android:id="@+id/customer_id_acd"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customerName_et_acd"
        android:hint="Customer Name"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="26dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customerNumber_et_acd"
        android:hint="Contact Number"
        android:maxLength="10"
        android:inputType="number"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/customerName_et_acd"
        android:layout_alignStart="@+id/customerName_et_acd"
        android:layout_alignEnd="@+id/customerName_et_acd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailid_et_acd"
        android:hint="Email ID"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/customerNumber_et_acd"
        android:layout_alignStart="@+id/customerNumber_et_acd"
        android:layout_alignEnd="@+id/customerNumber_et_acd" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/add_btn_acd"
        android:layout_below="@+id/emailid_et_acd"
        android:layout_alignEnd="@+id/emailid_et_acd"
        android:layout_marginTop="29dp" />

</RelativeLayout>