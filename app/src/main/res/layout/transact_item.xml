<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/pid_transItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="allah"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/pid_transItem"
            android:layout_alignParentRight="true"
            android:id="@+id/pquan_transItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="allahquan"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProductID:"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProductQuan"
            android:layout_alignTop="@+id/pquan_transItem"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>