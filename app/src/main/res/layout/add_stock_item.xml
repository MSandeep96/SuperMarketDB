<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <Spinner
        android:layout_width="match_parent"
        android:hint="Select Item"
        android:layout_height="60dp"
        android:id="@+id/spinner_asi"/>
    <TextView
        android:id="@+id/avlquan_tv_asi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Quan"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spinner_asi"
        android:layout_alignEnd="@+id/spinner_asi" />
    <EditText
        android:hint="Enter Quantity"
        android:id="@+id/quan_et_asi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accept_btn_asi"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView6"
        android:text="Add"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Available Quantity:"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spinner_asi"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="Price of Quantity:"
        android:layout_below="@+id/quan_et_asi"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/dynamic_price_asi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Price"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentEnd="true" />

</RelativeLayout>